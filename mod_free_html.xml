<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5" client="site" method="upgrade">
    <name>Free HTML</name>
    <author>Boyko Dmitry</author>
    <creationDate>25.04.2018</creationDate>
    <authorEmail>mail@itdix.net</authorEmail>
    <authorUrl>http://itdix.net</authorUrl>
    <version>1.0.0</version>
    <description>MOD_FREE_HTML_DESCRIPTION</description>
    <files>
        <filename module="mod_free_html">mod_free_html.php</filename>
		<filename>index.html</filename>
        <filename>mod_free_html.xml</filename>
        <folder>tmpl</folder>
		
    </files>
	<languages folder="language">
		<language tag="ru-RU">ru-RU/ru-RU.mod_free_html.ini</language>
		<language tag="ru-RU">ru-RU/ru-RU.mod_free_html.sys.ini</language>
		<language tag="en-GB">en-GB/en-GB.mod_free_html.ini</language>
		<language tag="en-GB">en-GB/en-GB.mod_free_html.sys.ini</language>
	</languages>
	<config>
		<fields name="params" addfieldpath="">
			<fieldset name="basic">
				<field name="HTML" type="textarea"  filter="raw" cols="40" rows="5" default="" label="HTML" />
			</fieldset>
		</fields>
		
	</config>
	
	<updateservers>
		<server type="extension" priority="1" name="Orange Slider">http://itdix.net/update/mod_free_html/update.xml</server>
	</updateservers>
	
</extension>